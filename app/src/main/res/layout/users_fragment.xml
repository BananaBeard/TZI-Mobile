<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameLabel"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="128dp"
        android:text="Username:"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameLabel"
        android:layout_marginBottom="6dp"
        android:layout_marginStart="70dp"
        android:layout_toEndOf="@+id/nameLabel"
        android:text="TextView"
        android:textSize="10pt"/>

    <TextView
        android:id="@+id/passLabel"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nameLabel"
        android:layout_below="@+id/nameLabel"
        android:layout_marginTop="82dp"
        android:text="Password:"
        android:textSize="13pt" />

    <TextView
        android:id="@+id/textPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/passLabel"
        android:layout_alignStart="@+id/textName"
        android:text="TextView"
        android:textSize="10pt"/>

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/passLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="124dp"
        android:checked="true"
        android:text="ToggleButton"
        android:textOff="Active"
        android:textOn="Blocked" />

    <TextView
        android:id="@+id/textBlocked"
        style="@style/TextAppearance.AppCompat.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toggleButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:text="This user is blocked"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="18pt" />
</RelativeLayout>